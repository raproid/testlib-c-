# add the local path to the environment path (see next section)
addvar: resultdynamic
	echo LD_LIBRARY_PATH=/home/username/projects/testlib-cpp:${LD_LIBRARY_PATH}
	echo export LD_LIBRARY_PATH
# add lib to the program
resultdynamic: main.o libmathfuncsdyn.so
	gcc main.o -L. -lmathfuncsdyn -o resultdynamic
#create a dynamic version of the library
libmathfuncsdyn.so: mathfuncs.o
	gcc -shared -o libmathfuncsdyn.so mathfuncs.o
#compile the library
mathfuncs.o: mathfuncs.cpp
	gcc -fPIC -c mathfuncs.cpp
#compile the program 
.PHONY: 
	gcc -c main.cpp	
